<h2>Card</h2>

{{#uk-card
  hover=hover
  color=color
  size=size
  width=width
as |card|}}
  {{#card.header}}
    {{#card.title tagName='h3'}}Title{{/card.title}}
  {{/card.header}}
  {{#card.body}}
    Content
  {{/card.body}}
  {{#card.footer}}
    {{uk-button color='text' label='Read more'}}
  {{/card.footer}}
{{/uk-card}}

<ul uk-tab>
  <li><a href="#">Props</a></li>
  <li><a href="#">Yields</a></li>
  <li><a href="#">Example</a></li>
</ul>

<ul class="uk-switcher">
  <li>
    <div class="uk-overflow-auto">
      <table class="uk-table uk-table-divider">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
            <th>Demo</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>hover</code></td>
            <td><code>Boolean</code></td>
            <td><code>false</code></td>
            <td>Whether to show a stronger shadow on hover</td>
            <td>
              {{input type='checkbox' class='uk-checkbox' checked=hover}}
            </td>
          </tr>
          {{color-row name='card' colors=(array 'default' 'primary' 'secondary') value=color}}
          {{size-row name='card' sizes=(array '' 'small' 'large') value=size}}
          {{width-row name='card' value=width}}
        </tbody>
      </table>
    </div>
  </li>
  <li>
    <div class="uk-overflow-auto">
      <table class="uk-table uk-table-divider">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>header</code></td>
            <td><code>Ember.Component</code></td>
            <td>A component for the cards header</td>
          </tr>
          <tr>
            <td><code>title</code></td>
            <td><code>Ember.Component</code></td>
            <td>A component for the cards title, has a default <code>tagName</code> of <code>h1</code>.</td>
          </tr>
          <tr>
            <td><code>body</code></td>
            <td><code>Ember.Component</code></td>
            <td>A component for the cards main body</td>
          </tr>
          <tr>
            <td><code>footer</code></td>
            <td><code>Ember.Component</code></td>
            <td>A component for the cards footer</td>
          </tr>
        </tbody>
      </table>
    </div>
  </li>
  <li>{{code-snippet name='card.hbs'}}</li>
</ul>