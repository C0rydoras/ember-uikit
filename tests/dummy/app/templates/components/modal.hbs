<h2>Modal</h2>

<div class="uk-padding uk-box-shadow-medium uk-margin">
  {{#uk-modal
    visible=visible
    closable=closable
    on-submit=(action "submit")
  }}
    <h2 class="uk-modal-title">Test</h2>
    <p>Lorem Ipsum</p>
    <p class="uk-text-right">
      {{uk-button color="primary" label="Submit" on-click=(action "submit")}}
    </p>
  {{/uk-modal}}

  {{uk-button label="Open modal" on-click=(action (mut visible true))}}
</div>

{{#uk-switcher animation="uk-animation-fade" as |switcher|}}
  {{#switcher.nav type="tab" as |nav|}}
    {{#nav.component as |tab|}}
      {{#tab.item}}Props{{/tab.item}}
      {{#tab.item}}Example{{/tab.item}}
    {{/nav.component}}
  {{/switcher.nav}}

  {{#switcher.content as |content|}}
    {{#content.item}}
      <div class="uk-overflow-auto">
        <table class="uk-table uk-table-divider">
          <thead>
            <tr>
              <th>Name</th>
              <th>Type</th>
              <th>Default</th>
              <th>Description</th>
              <th>Demo</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><code>visible</code></td>
              <td><code>Boolean</code></td>
              <td><code>false</code></td>
              <td>Whether the modal is currently visible or not</td>
              <td>
                {{input type="checkbox" class="uk-checkbox" checked=visible}}
              </td>
            </tr>
            <tr>
              <td><code>closable</code></td>
              <td><code>Boolean</code></td>
              <td><code>true</code></td>
              <td>Whether the modal can be closed (only read during initialization)</td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    {{/content.item}}
    {{#content.item}}
      {{code-snippet name="modal.hbs"}}
    {{/content.item}}
  {{/switcher.content}}
{{/uk-switcher}}
